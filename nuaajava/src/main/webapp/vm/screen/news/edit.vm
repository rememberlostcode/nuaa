			<link href="$static_server_name/css/admin-style.css" rel="stylesheet" type="text/css" />
		<table style="margin:auto;">
			<input type="hidden" id="id" value="$!news.id"/>
			<input type="hidden" id="type" value="$!news.type"/>
			<tr>
				<td>
					#if($!type==0) 
        				新闻标题：
        			#else 
        				通知标题：
        			#end 
				</td>
				<td>
					<input type="text" id="title" name="title" style="width:800px;" value="$!news.title" maxlength="50"/>
				</td>
			</tr>
			<tr>
				<td>
					#if($!type==0) 
        				新闻内容：
        			#else 
        				通知内容：
        			#end 
				</td>
				<td>
					<textarea id="kindeditor_id" name="kindeditortText" style="width:800px;height:400px;">$!news.content</textarea>
